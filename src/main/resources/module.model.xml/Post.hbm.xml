<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping xmlns="http://www.hibernate.org/xsd/hibernate-mapping">
    <class name="module.model.Post" table="posts">
        <id name="id" column="id">
            <generator class="identity"/>
        </id>
        <property name="title" column="title" type="string" length="100"/>
        <property name="content" column="content" type="string" length="1000"/>
        <many-to-one name="author" column="author"
                     class="module.model.User"
                     cascade="all"
        />
        <many-to-one name="moderator" column="moderator"
                     class="module.model.User"
                     cascade="all"
        />
        <property name="rating" column="rating" type="integer"/>
        <property name="status" column="status">
            <type name="org.hibernate.type.EnumType">
                <param name="enumClass">module.model.PostStatus</param>
                <param name="useNamed">true</param>
            </type>
        </property>

    </class>
</hibernate-mapping>